{
    "openapi": "3.0.0",
    "info": {
        "title": "My first API",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api/v1"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "authenticate user by credentials",
                "description": "the user informs their credentials with email and password to get the access token",
                "operationId": "App\\Http\\Controllers\\Api\\v1\\AuthController::login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "description": "Requisitar token JWT",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "Requisitar token JWT",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token JWT"
                    },
                    "default": {
                        "description": "unexpected error",
                        "content": {
                            "text/xml": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            },
                            "text/html": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            },
                            "application/xml": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorModel"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ErrorModel": {
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}